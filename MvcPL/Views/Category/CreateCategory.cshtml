@model MvcPL.ViewModels.CategoryPhotoViewModel

@{
    ViewBag.Title = "Create Category";
}

<div class="central-div">
    <h4>Create Category</h4>
    <hr>
    <div style="width: 90%; margin: 0 auto;">
        @using (Html.BeginForm("CreateCategory", "Category", FormMethod.Post, new { @class = "category-form" }))
        {
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.AntiForgeryToken()
            <div class="editor-field">
                @Html.TextBoxFor(model => model.Name, new { @placeholder = "Category", @class = "required input-category" })
                @Html.ValidationMessageFor(model => model.Name, null, new { @class = "text-danger" })
            </div>
            <br>
            <p class="left-float" style="width:50%;">
                <input type="submit" value="Create" class="button btn left-float" style="border:1px solid lightgray; width:100%;" />
            </p>
            <p class="left-float" style="width:50%;">
                @Html.RouteLink("Cancel", "userphotos", routeValues: null, htmlAttributes: new { @class = "link-btn btn", style = "width:100%;" })
            </p>
        }
    </div>
</div>

@Scripts.Render("~/bundles/jqueryval")


